apiVersion: v1
kind: Pod
metadata:
  name: secret-busybox
spec:
  containers:
  - image: busybox
    name: secret-busybox
    command:
    - sleep
    - "3600"
    env:
    - name: MYSQL_USER
      valueFrom:
        secretKeyRef:
          name: db-secret
          key: MYSQL_USER
    - name: MYSQL_PASSWORD
      valueFrom:
        secretKeyRef:
          name: db-secret  # name of secret
          key: MYSQL_PASSWORD  # key to fetch

# Ensure you have created your password and user
# kubectl create secret generic <secret name> --from-literal=MYSQL_USER=edureka --from-literal=MYSQL_PASSWORD=redhat_123
# kubectl get secret (to check)
# kubectl get secret -o yaml (to check)
# echo <password link from above> | base64 -decode or -d (to decode secret)
