apiVersion: v1
kind: Pod
metadata:
  name: secret-busybox
spec:
  containers:
  - image: busybox
    name: secret-busybox
    command:
    - sleep
    - "3600"
    env:
    - name: MYSQL_USER
      valueFrom:
        secretKeyRef:
          name: db-secret
          key: MYSQL_USER
    - name: MYSQL_PASSWORD
      valueFrom:
        secretKeyRef:
          name: db-secret
          key: MYSQL_PASSWORD
